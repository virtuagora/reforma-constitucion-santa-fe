{% extends "lpe/master.twig" %} {# ----------------------------------------------------------- #} {% block titulo %}Inicio{%
endblock %} {% block body %}
<div class="container-fluid inicio-banner">
    <div class="overlay-banner">
        <div class="row">
            <div class="col-xs-12 text-center">
                <h1 style="text-transform: uppercase"><strong>{{ titulo }}</strong></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 text-center">
                <div class="descripcion" style="font-size: 14px;line-height: 21px;">
                {{ intro|bbCode }}
            </div>

            </div>
        </div>
    </div>
</div>


<div id="derechos" class="container-fluid">
    <div class="row text-center">
        <h5 style="font-weight: bold; margin: 40px auto; letter-spacing: -0.4px;">CONOCÉ LOS DISTINTOS PUNTOS DE LA LEY Y PARTICIPÁ:</h5>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-10 col-md-offset-1" style="margin-bottom: 30px;">
            
            {% if derechos|length > 0 %}
            <div class="grid">
                <div class="grid-sizer"></div>
                {% for derecho in derechos %}
                {% set linkImagen = baseUrl() ~ '/img/bloque/' ~ derecho.id ~ '.jpg' %}
                <a href="{{ urlFor('shwDerecho', {'idDer': derecho.contenible_id})}}">
                    <div class="grid-item" style="background-image: url('{{linkImagen}}');background-position:center center; background-size:cover;">
                        <figure class="cap-bot">
                            <div class="text-center" style="">
                                <h5 style="text-transform: uppercase"><strong>{{ derecho.titulo }}</strong></h5>
                            </div>
                            <figcaption>
                                ¡Participá! <i class="fa fa-hand-paper-o fa-lg fa-fw"></i>
                            </figcaption>
                        </figure>
                    </div>
                </a>
                {% endfor %}
            </div>
            {% else %}
            <div class="text-center">
                <p>ERROR CRITICO</p>
            </div>
            {% endif %}
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-xs-12 col-md-5 col-md-offset-1" style="margin-bottom: 30px;">

            <div class="" style=" background-size:cover;">
                <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        {% for video in videos %}
                        <div class="item {{ loop.first ? 'active':''}}">
                            <div class="row">
                                <div class="col-xs-12 text-center">
                                    <div class="embed-responsive embed-responsive-16by9">
                                        <iframe class="embed-responsive-item" width="853" height="480" src="https://www.youtube.com/embed/{{video}}" frameborder="0" allowfullscreen></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="icon-prev" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="icon-next" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
              
            </div>
        </div>
        <div class="col-xs-12 col-md-5">
            <h5><strong>CRONOGRAMA</strong></h5>
            <div class="list-group">
                {% if eventos|length > 0%}
                {% set contador = 1 %}
                {% set tackle = true %}
                {% for evento in eventos %}
                    {% if contador >= 1 and contador < 3 %}
                    <li class="list-group-item {{ tackle ? 'active' : ''}}">
                    <div class="pull-right text-center">
                        <h3><span style="{{ tackle ? 'color:#FFF' : ''}}">
                            <i class="zmdi  {{ (evento.finalizado) and tackle ? 'zmdi-badge-check' : ''}}
                            {{ (not evento.finalizado) and tackle ? 'zmdi-calendar' : ''}}
                            {{ (not evento.finalizado) and (not tackle) ? 'zmdi-time-countdown' : ''}}
                             zmdi-hc-fw zmdi-hc-lg"></i>
                            </span></h3>
                    </div>
                    <h5 class="list-group-item-heading"><strong>{{ evento.titulo }}</strong></h5>
                    <h6 class="list-group-item-heading">{{evento.fecha|date("d/m/Y")}} - {{evento.fecha|date("H:i")}}Hs.</h6>
                    <h6 class="list-group-item-heading">{{ evento.lugar }}</h6>
                    </li>
                    {% endif %}
                    {% if tackle %}
                    {% set tackle = false %}
                    {% endif %}
                    {% if not evento.finalizado %}
                    {% set contador = contador + 1 %}
                    {% endif %}
                    {% endfor %}
                {% else %}
                <li class="list-group-item">
                    <h6 class="list-group-item-heading">No hay eventos próximos</h6>
                </li>
                {% endif %}
                <br>
                <a href="{{ urlFor('shwListaEvento')}}" class="btn btn-xs btn-link">Ver mas eventos</a></small>
            </div>
        </div>
    </div>
    <div class="row">
<div class="col-xs-12 text-center">
    <h5 style="font-weight: bold; margin: 40px auto; letter-spacing: -0.4px;">COLABORARON:</h5>
    <img src="{{ baseUrl() }}/assets-lpe/img/logos.png" class="img-responsive" style="margin: auto;" alt="">
</div>
        </div>
</div>

{% endblock body %} {# -------------------------------------------- #} {% block scripts %}
<script src="{{ baseUrl() }}/assets-lpe/js/masonry.pkgd.min.js"></script>
<script>
    $('.grid').masonry({
        // set itemSelector so .grid-sizer is not used in layout
        itemSelector: '.grid-item',
        // use element for option
        columnWidth: '.grid-sizer',
        percentPosition: true
    })
    $(function() {
  $('a[href="#derechos"]').click(function() {
    if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
      var target = $(this.hash);
      target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
      if (target.length) {
        $('html, body').animate({
          scrollTop: target.offset().top
        }, 1000);
        return false;
      }
    }
  });
});
</script> {% endblock scripts %}